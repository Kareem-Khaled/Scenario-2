<%- include('../partials/header') %>

<div class="container-fluid">
   <!-- Content for adding a new appointment slot -->
    <h1 class="mt-3">Profile</h1>
    <%- include('../partials/flash') %>
    <form id="profileForm" class="mt-4" action="/doctor/profile" method="post">
        <div class="form-group">
            <label for="specialty">Specialty:</label>
            <input type="text" class="form-control" id="specialty" name="specialty" placeholder="Enter specialty" value="<%= doctor.specialty %>">
          </div>
          <div class="form-group">
            <label for="appointmentCost">Appointment Cost:</label>
            <input type="number" min="1" class="form-control" id="appointmentCost" name="appointmentCost" placeholder="Enter appointment cost" value="<%= doctor.appointmentCost %>">
          </div>
          <div class="form-group">
            <label for="phone">Phone:</label>
            <input type="tel" class="form-control" id="phone" name="phone" placeholder="Enter phone number" value="<%= doctor.info.phone %>">
          </div>
          <div class="form-group">
            <label for="location">Location:</label>
            <input type="text" class="form-control" id="location" name="location" placeholder="Enter location" value="<%= doctor.info.location %>">
          </div>
          <button type="submit" class="btn btn-primary my-4">Submit</button>
    </form>
</div>

<%- include('../partials/footer') %>
