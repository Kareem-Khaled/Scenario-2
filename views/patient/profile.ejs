<%- include('../partials/header') %>

<div class="container-fluid">
   <!-- Content for adding a new appointment slot -->
    <h1 class="mt-3">Profile</h1>
    <%- include('../partials/flash') %>
    <form id="profileForm" class="mt-4" action="/patient/profile" method="post">
        <div class="form-group">
          <label for="age">Age:</label>
          <input type="number" min="1" class="form-control" id="age" name="age" placeholder="Enter age" value="<%= patient.age %>">
        </div>
        <div class="form-group">
          <label for="bloodType">Blood Type:</label>
          <select class="form-control" id="bloodType" name="bloodType">
            <option value="A+" <% if (patient.bloodType === 'A+') { %>selected<% } %>>A+</option>
            <option value="A-" <% if (patient.bloodType === 'A-') { %>selected<% } %>>A-</option>
            <option value="B+" <% if (patient.bloodType === 'B+') { %>selected<% } %>>B+</option>
            <option value="B-" <% if (patient.bloodType === 'B-') { %>selected<% } %>>B-</option>
            <option value="AB+" <% if (patient.bloodType === 'AB+') { %>selected<% } %>>AB+</option>
            <option value="AB-" <% if (patient.bloodType === 'AB-') { %>selected<% } %>>AB-</option>
            <option value="O+" <% if (patient.bloodType === 'O+') { %>selected<% } %>>O+</option>
            <option value="O-" <% if (patient.bloodType === 'O-') { %>selected<% } %>>O-</option>
          </select>
        </div>
        <div class="form-group">
          <label for="phone">Phone:</label>
          <input type="tel" class="form-control" id="phone" name="phone" placeholder="Enter phone number" value="<%= patient.info.phone %>">
        </div>
        <div class="form-group">
          <label for="location">Location:</label>
          <input type="text" class="form-control" id="location" name="location" placeholder="Enter location" value="<%= patient.info.location %>">
        </div>  
        <button type="submit" class="btn btn-primary my-4">Save</button>
    </form>
</div>

<%- include('../partials/footer') %>
