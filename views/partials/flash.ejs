<style>
    .alert-fixed {
    position:fixed; 
    top: 30px; 
    right: 10px; 
    z-index:9999; 
    border-radius:0px
}
</style>
<% if(success && success.length) {%>
    <div class="alert alert-success alert-dismissible fade show mt-2" role="alert"> 
        <%= success %>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
<% } %>

<% if(error && error.length) {%>
    <div class="alert alert-danger alert-dismissible fade show mt-2" role="alert"> <%= error %>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
<% } %>


<style>
    /* CSS with transitions for smooth slideUp effect */
    .alert {
        transition: height 0.2s, padding 0.2s, margin 0.2s, border 0.2s;
    }

</style>

<script>
    // Your JavaScript to apply the slideUp effect
    const alertElements = document.getElementsByClassName('alert');

    setTimeout(() => {
    // Loop through all elements with class 'alert'
    for (const alertElement of alertElements) {
        // Apply the 'slideUp' class to initiate the slideUp effect
        alertElement.classList.add('slideUp');

        // Remove the element from the DOM after the slideUp effect finishes (200 milliseconds)
        setTimeout(() => {
        alertElement.remove();
        }, 200);
    }
    }, 4000); // 4000 milliseconds (delay before slideUp effect)

</script>